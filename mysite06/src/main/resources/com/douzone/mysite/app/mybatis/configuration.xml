		<typeAlias type="com.douzone.mysite.vo.GalleryVo" alias="galleryvo" />
    </typeAliases>	
    
	<mappers>
		<mapper resource="com/douzone/mysite/app/mybatis/mappers/user.xml" />
		<mapper resource="com/douzone/mysite/app/mybatis/mappers/guestbook.xml" />
